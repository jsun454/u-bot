<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatRoomActivity">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_chat_room_rv_message_list"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
        
        <EditText
                android:id="@+id/activity_chat_room_et_user_message"
                android:hint="Say hello!"
                android:inputType="text"
                android:background="@drawable/et_rounded"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="Autofill, HardcodedText, RtlSymmetry"/>

        <Button
                android:id="@+id/activity_chat_room_btn_send"
                android:text="Send"
                android:textAllCaps="false"
                android:background="@drawable/btn_rounded"
                android:layout_margin="8dp"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
        
    </LinearLayout>

</LinearLayout>